<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="1.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="1.0dip">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Welcome!"
                android:textColor="#757575"
                android:textSize="33dp"
                android:textStyle="bold"
                android:layout_marginBottom="33dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="154dp"
                android:layout_marginTop="90dp"
                android:contentDescription="@string/nav_header_desc"
                app:srcCompat="@drawable/pribory" />

            <Button
                android:id="@+id/btnMap"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_style_main"
                android:onClick="actionBtnGoToMap"
                android:text="Go to map"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnBasic"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="110dp"
                android:background="@drawable/button_style_main"
                android:onClick="actionBasicSearch"
                android:text="Basic search"
                android:textColor="#757575"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAdvanced"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="170dp"
                android:background="@drawable/button_style_main"
                android:onClick="actionAdvancedSearch"
                android:text="Advanced search"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="270dp"
                android:background="@drawable/button_style_main"
                android:onClick="actionSignOut"
                android:text="Logout"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp" />

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>